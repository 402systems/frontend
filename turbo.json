{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "worker-configuration.d.ts"
      ]
    },
    "format:check": {
      "cache": true,
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,md,css}",
        ".prettierrc.js"
      ]
    },
    "deploy": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    "libs/core/eslint/**/*",
    "libs/core/prettier/**/*",
    "libs/core/tsconfig/**/*"
  ]
}